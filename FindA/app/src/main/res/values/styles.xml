    <style name="CameraButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#fff</item>
        <item name="colorButtonNormal">@color/firstMainColor</item>
    </style>
    <style name="GalleryButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#fff</item>
        <item name="colorButtonNormal">@color/secondMainColor</item>
    </style>
